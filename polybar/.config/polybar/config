[bar/tray]
width = 22%
height = 35
offset-x = 77.5%
radius = 8.0

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 5
border-color = #00000000

font-0 = Iosevka Medium:size=11;1
font-1 = Font Awesome 5 Brands Regular:size=10
font-2 = Font Awesome 5 Free Regular:size=10
font-3 = Font Awesome 5 Free Solid:size=10
module-margin-right = 2
padding-right = 2
modules-right = xkeyboard pulseaudio date

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label-layout =  %layout%

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.foreground}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/music]
type = custom/script
exec = $HOME/.config/scripts/music/get_music.sh 2> /dev/null
tail = true
click-left = playerctl play-pause
interval = 0

[module/date]
type = internal/date
interval = 5
date-alt = " %Y-%m-%d"
time =  %H:%M
time-alt = %H:%M:%S
format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}
label-muted = 🔇 

[settings]
screenchange-reload = true
