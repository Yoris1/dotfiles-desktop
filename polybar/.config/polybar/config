[colors]
;background = ${xrdb:color1}
background = ${env:bg}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color8}
primary = ${xrdb:color3}
secondary = ${xrdb:color2}
alert = ${xrdb:color3}

[bar/workspaces]
width = 22%
height = 35
offset-x = 0.5%
radius = 8.0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-size = 5
